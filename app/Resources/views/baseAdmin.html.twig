<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="keywords" content="{% block keywords %}{% endblock %}" />
        <meta name="description" content="{% block description %}{% endblock %}" />
        <title>{% block title %}E-commerce Test Platform{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" type="text/css" href="{{ asset('/vendor/bootstrap/dist/css/bootstrap.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('/assets/styles/css/style.css') }}" />
            <link rel="stylesheet" type="text/css" href="{{ asset('/assets/styles/css/responsive.css') }}" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block body %}
            {% block header %}
                <header class="container-fluid">
                {% block nav %}
                    {% include 'includes/navbarmenu_admin.html.twig' %}
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-12 col-md-12">
                                {% if app.request.hasPreviousSession %}
                                    {% for type, messages in app.session.flashbag.all() %}
                                        {% for message in messages %}
                                            <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <b>{{ message }}</b>
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                {% endif %}
                            </div>
                        </div>

                    </div>
                {% endblock %}<!-- END nav -->
                </header>
            {% endblock %}<!-- END header -->
            {% block content %}{% endblock %}<!-- END content -->
            {% block footer %}
                <hr />
                <footer class="container-fluid">
                    <div class="container">
                        <div class="row">
                            <p class="text-center">
                                <em>Copyright tuto opensource ;-) {{ "now"|date('Y') }} - All rights reserved for everybody</em>
                            </p>
                        </div>
                    </div>
                </footer>
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('/vendor/jquery/dist/jquery.js') }}"></script>
            <script src="{{ asset('/vendor/bootstrap/dist/js/bootstrap.js') }}"></script>
            <script src="{{ asset('/assets/js/ecomMain.js') }}"></script>
        {% endblock %}
    </body>
</html>
