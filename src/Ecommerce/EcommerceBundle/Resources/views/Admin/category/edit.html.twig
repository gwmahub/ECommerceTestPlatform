{% extends '::baseAdmin.html.twig' %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-12">
            <h1>{{ 'Mise à jour d\'une nouvelle catégorie de produit'|trans }}</h1>
            <p class="text-right"><a class="btn btn-default" href="{{ path('admin_category_index') }}"><i class="glyphicon glyphicon-menu-left"></i><i class="glyphicon glyphicon-menu-left"></i>&nbsp;&nbsp;{{ "Retour à la lise"|trans }}</a></p>
            <div class="row">
                {{ dump(category.image) }}
                <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-4 col-md-4 col-md-offset-3 col-lg-4 col-lg-offset-4 ">
                {% if category.image.webfilename is defined and category.image.webfilename is not null %}
                    <img class="img-responsive center-block" src="/{{ category.image.UploadDir~category.image.webfilename }}" />
                {% endif %}
                </div>
            </div>
            {{ form_start(edit_form, { 'multipart':'true' }) }}
            {{ form_widget(edit_form) }}
            <p class="pull-right"><button class="btn btn-success" type="submit">{{ "Mettre à jour"|trans }}</button></p>
            {{ form_end(edit_form) }}
            <div class="pull-left">
                {{ form_start(delete_form) }}
                <button class="btn btn-danger" type="submit">
                    <i class="glyphicon glyphicon-trash"></i>&nbsp;&nbsp;{{ 'Supprimer'|trans }}
                </button>
                {{ form_end(delete_form) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
