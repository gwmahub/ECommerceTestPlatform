{% extends '::baseAdmin.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12">
                <h1>Orders</h1>
                {{ dump(orders) }}
                {% if orders|length == 0 %}
                    <div class="alert alert-info">
                        {{ 'Il n \'y a pas encore de commande'|trans }}
                    </div>
                {% else %}
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Réf</th>
                            <th>Date</th>
                            <th>Montant TTC</th>
                            <th align="center">Download</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order in orders %}
                            <tr>
                                <td><a title="" href="{{ path('admin_order_show', { 'id':order.id }) }}" target="_blank">{{ order.orderfullref }}</a></td>
                                <td>{{ order.date|date('d/m/y') }}</td>
                                <td>{{ order.orderdetailsgrouped.total_incl_vat|replace( { ".":"," } ) }} €</td>
                                <td align="left" style="padding-left: 20px;">
                                    <a href="{{ path('user_bill', { 'orderid':order.id }) }}" target="_blank"><i class="glyphicon glyphicon-download"></i></a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}

            </div>
        </div>
    </div><!-- END .container -->

{% endblock %}
